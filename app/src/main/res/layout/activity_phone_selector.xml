<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myLAy"
    android:background="#EE9D06"
    tools:context="com.example.ajdin.tracebrace.PhoneSelector">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:text="Connection not estabilished, please connect TraceBrace"
        android:textAlignment="center"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="48dp"
        android:text="Enter phone number" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView6"
        android:background="@drawable/bogata"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:inputType="phone"
        android:id="@+id/editText5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_below="@+id/editText5"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="Enter message"

        />


    <EditText
        android:id="@+id/editText8"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView8"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/bti"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:lines="1"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Button
        android:id="@+id/dgm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/next"
        android:layout_alignBottom="@+id/next"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="Add" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText8"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:text="NEXT" />



</RelativeLayout>
