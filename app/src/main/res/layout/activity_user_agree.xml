<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/rsz_brojback"
    android:layout_height="match_parent"
    tools:context="com.example.ajdin.tracebrace.UserAgree">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prozor"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="300dp"
        android:background="@drawable/poya"
        android:layout_height="270dp"
        android:layout_above="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp">
        <TextView
            android:id="@+id/textView9"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="146dp"

            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="170dp" />
    </ScrollView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/scrollView2"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/scrollView2"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_toRightOf="@+id/checkBox"
        android:text="Prihvatam uslove koristenja"
        android:id="@+id/textView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="24dp"
        android:text="DAlje"
        android:id="@+id/button4" />

</RelativeLayout>
